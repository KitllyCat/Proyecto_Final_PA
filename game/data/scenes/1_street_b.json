    {
      "type": "dialogue",
      "speaker": " Kami",
      "text": "Bueno... tal parece que ya lo perdi de vista..."
    },
    {
      "type": "dialogue",
      "speaker": " Kami",
      "text": "Me hubiese gustado acariciarlo..."
